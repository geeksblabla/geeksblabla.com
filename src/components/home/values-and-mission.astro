---
import ConsistencyIcon from "@/assets/values/consistency.png";
import simplicityIcon from "@/assets/values/simplicity.png";
import transparencyIcon from "@/assets/values/transparency.png";
import inclusivenessIcon from "@/assets/values/inclusiveness.png";
import empathyIcon from "@/assets/values/empathy.png";
import accountabilityIcon from "@/assets/values/accountability.png";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type VV = {
  icon: ImageMetadata;
  name: string;
};
const values: VV[] = [
  { icon: ConsistencyIcon, name: "CONSISTENCY" },
  { icon: simplicityIcon, name: "SIMPLICITY" },
  { icon: transparencyIcon, name: "TRANSPARENCY" },
  { icon: inclusivenessIcon, name: "INCLUSIVENESS" },
  { icon: empathyIcon, name: "EMPATHY" },
  { icon: accountabilityIcon, name: "ACCOUNTABILITY" },
];

const mission = [
  {
    title: "Knowledge Exchange",
    description:
      "Between novice learners and seasoned professionals, we create a supportive environment for skill enhancement.",
  },
  {
    title: "Inclusive Diversity",
    description:
      "Embracing the different perspectives & backgrounds to enrich our collective knowledge and inspire innovation.",
  },
  {
    title: "Tech for Social Impact",
    description:
      "Harness the collective power of the community to drive positive change.",
  },
];
---

<section
  id="mission"
  class="group bg-[#F2F4F7] py-16 font-light"
  data-visible-in-the-view="false"
>
  <div class="container mx-auto px-4">
    <h2
      class="mb-8 text-center text-4xl font-bold group-data-[visible-in-the-view=true]:motion-preset-slide-down group-data-[visible-in-the-view=true]:motion-delay-200 md:text-left"
    >
      Our mission
    </h2>
    <p
      class="mb-12 max-w-[800px] text-center text-paragraph-lg font-thin text-neutral-dark-50 group-data-[visible-in-the-view=true]:motion-preset-slide-down group-data-[visible-in-the-view=true]:motion-delay-300 md:text-left"
    >
      Is to Empower Moroccan ðŸ‡²ðŸ‡¦ IT enthusiasts and beyond to thrive through
      continuous learning, exchange, collaboration, and innovation.
    </p>

    <div class="mb-12 grid grid-cols-1 gap-8 sm:grid-cols-3">
      {
        mission.map(item => (
          <div class="group-data-[visible-in-the-view=true]:motion-delay-400 group-data-[visible-in-the-view=true]:motion-preset-slide-down">
            <h4 class="mb-4 text-center text-label-lg font-semibold md:text-left">
              {item.title}
            </h4>
            <p class="text-center text-paragraph-sm text-neutral-dark-50 md:text-left">
              {item.description}
            </p>
          </div>
        ))
      }
    </div>

    <h2
      class="my-8 text-center text-4xl font-bold group-data-[visible-in-the-view=true]:motion-preset-slide-down group-data-[visible-in-the-view=true]:motion-delay-[600ms] md:text-left"
    >
      Our values
    </h2>
    <div class="grid grid-cols-2 gap-8 md:grid-cols-3">
      {
        values.map(value => (
          <div class="flex flex-col items-center group-data-[visible-in-the-view=true]:motion-preset-slide-down group-data-[visible-in-the-view=true]:motion-delay-[600ms]">
            <div class="mb-4 h-24">
              <Image src={value.icon} class="h-full w-24" alt={value.name} />
            </div>
            <span class="py-4 text-paragraph-sm font-light text-neutral-dark-20 md:text-heading-sm">
              {value.name}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>
