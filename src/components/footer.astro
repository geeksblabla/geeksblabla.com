---
import LogoLight from "@/assets/logo-light.svg?raw";
import { SOCIALS } from "@/config";
import { Icon } from "astro-icon/components";

const links = [
  {
    title: "blablaconf.com",
    href: "https://blablaconf.com",
  },
  {
    title: "stateofdev.ma",
    href: "https://stateofdev.ma",
  },
  {
    title: "awesome-morocco",
    href: "https://awesome-morocco.dev",
  },
  {
    title: "Podcast",
    href: "/podcast",
  },
  {
    title: "About us",
    href: "/about",
  },
  {
    title: "Contribute",
    href: "/contribute",
  },
];
---

<footer class="bg-black py-12 text-white" id="footer">
  <div class="main text-neutral-light-30">
    <div class="mb-8">
      <h2 class="mb-2 font-sans text-heading-lg">You want to contribute?</h2>
      <a href="https://github.com/your-repo-link" class="hover:text-white">
        &gt; Source code is on GitHub ↗
      </a>
    </div>

    <div class="grid gap-8 font-sans md:grid-cols-2">
      <div>
        <h2 class="mb-4 text-heading-sm">Find out more</h2>
        <ul class="space-y-2 font-bold">
          {
            links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="flex w-fit items-center hover:text-white"
                  target={link.href.includes("http") ? "_blank" : ""}
                >
                  &gt; {link.title}
                  <Icon name="external-link-styled" class="ml-1 h-4 w-4" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="flex flex-col items-center self-end md:items-end">
        <Fragment
          set:html={LogoLight}
          alt="GeeksBlabla Logo"
          class="mb-4 w-20"
        />
        <div class="mt-3 flex space-x-6">
          {
            Object.entries(SOCIALS).map(([key, social]) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-gray-400"
              >
                <span class="sr-only">{social.linkTitle}</span>
                <Icon name={key} class="h-6 w-6 text-white" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-12 border-t border-neutral-light-0/50 pt-8 text-center">
      <p>
        Geeksblabla © 2018-{new Date().getFullYear()} / Made with ❤️ by <a
          href="/about"
          class="hover:text-white">GeeksBlabla Community</a
        >
      </p>
    </div>
  </div>
</footer>
